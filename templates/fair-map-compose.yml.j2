services:
  fair-map:
    image: julianh2o/fair-map:latest
    container_name: fair-map
    ports:
      - "3050:3050"
    environment:
      - PORT=3050
      - APP_BASE_URL=http://localhost:2998
      - NODE_ENV=production
      - DATABASE_URL=file:./data/db.db
    volumes:
      - ./data:/app/data
    restart: unless-stopped
