<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fairgrounds Infrastructure Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .service-icon {
            width: 32px;
            height: 32px;
            margin-right: 12px;
            border-radius: 6px;
            object-fit: contain;
            background: white;
            padding: 1px;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        h1 {
            color: white;
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .card h2 {
            color: #667eea;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #667eea;
            font-size: 1.5rem;
        }

        .service-list {
            list-style: none;
        }

        .service-item {
            margin-bottom: 0.75rem;
        }

        .service-link {
            display: flex;
            align-items: center;
            padding: 1rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            text-decoration: none;
            color: white;
            transition: all 0.3s;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .service-link:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        }

        .group-heading {
            font-size: 1.1rem;
            font-weight: 600;
            color: #4a5568;
            margin-top: 1.25rem;
            margin-bottom: 0.5rem;
            padding-bottom: 0.25rem;
            border-bottom: 1px solid #e2e8f0;
            text-transform: capitalize;
        }

        .group-heading:first-of-type {
            margin-top: 0;
        }

        .service-info {
            flex: 1;
            min-width: 0;
        }

        .service-name {
            font-weight: 700;
            font-size: 1.05rem;
        }

        .service-description {
            font-size: 0.8rem;
            color: rgba(255, 255, 255, 0.75);
            margin-top: 0.125rem;
        }

        .host-header {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
            margin-top: 1.25rem;
            border-bottom: 2px solid #48bb78;
            margin-bottom: 0.5rem;
        }

        .host-header:first-child {
            margin-top: 0;
        }

        .host-name {
            font-weight: 700;
            color: #2d3748;
            font-size: 1.1rem;
        }

        .host-ip {
            font-size: 0.85rem;
            color: #718096;
            font-family: monospace;
        }

        .stack-item {
            padding: 0.75rem 1rem;
            background: #f7fafc;
            border-radius: 8px;
            margin-bottom: 0.75rem;
            border-left: 4px solid #ed8936;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            flex-wrap: wrap;
        }

        .stack-info {
            flex: 1;
            min-width: 0;
        }

        .stack-name {
            font-weight: 600;
            color: #2d3748;
            font-size: 0.95rem;
        }

        .stack-description {
            font-size: 0.8rem;
            color: #718096;
        }

        .stack-icons {
            display: flex;
            align-items: center;
            gap: 0.375rem;
            flex-wrap: wrap;
        }

        .stack-icon-link {
            display: block;
            width: 28px;
            height: 28px;
            border-radius: 6px;
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s;
            background: white;
            padding: 2px;
            border: 1px solid #e2e8f0;
        }

        .stack-icon-link:hover {
            transform: scale(1.2);
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        .stack-icon-link img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .badge {
            display: inline-block;
            padding: 0.25rem 0.5rem;
            background: #667eea;
            color: white;
            border-radius: 4px;
            font-size: 0.75rem;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
{% set favicon_map = {
    'audiobookshelf': 'audiobookshelf.png',
    'books': 'audiobookshelf.png',
    'deluge': 'deluge.png',
    'grafana': 'grafana.png',
    'home': 'home-assistant.png',
    'photos': 'immich.png',
    'immich': 'immich.png',
    'jackett': 'jackett.png',
    'nzbhydra': 'nzbhydra.png',
    'ollama': 'ollama.png',
    'ombi': 'ombi.png',
    'paperless': 'paperless.png',
    'pihole': 'pihole.png',
    'plex': 'plex.png',
    'njord': 'proxmox.png',
    'proxmox': 'proxmox.png',
    'prometheus': 'prometheus.png',
    'qbittorrent': 'qbittorrent.png',
    'radarr': 'radarr.png',
    'readarr': 'readarr.png',
    'sabnzbd': 'sabnzbd.png',
    'sonarr': 'sonarr.png',
    'tautulli': 'tautulli.png',
    'traccar': 'traccar.png',
    'truenas': 'truenas.png'
} %}
    <div class="container">
        <h1>Fairgrounds Infrastructure Dashboard</h1>

        <div class="grid">
            <!-- Web Applications Section -->
            <div class="card">
                <h2>Web Applications</h2>
{% for group, group_services in services | selectattr('type', 'equalto', 'webapp') | groupby('group') %}
                <h3 class="group-heading">{{ group }}</h3>
                <ul class="service-list">
{% for service in group_services %}
{% set service_key = service.url.split('.')[0] %}
{% set icon = favicon_map.get(service_key, 'default.png') %}
                    <li class="service-item">
                        <a href="{{ service.protocol | default('https') }}://{{ service.url }}" class="service-link" target="_blank">
                            <img src="favicons/{{ icon }}" alt="{{ service_key }}" class="service-icon">
                            <div class="service-info">
                                <div class="service-name">{{ service.name }}</div>
                                <div class="service-description">{{ service.description }}</div>
                            </div>
                        </a>
                    </li>
{% endfor %}
                </ul>
{% endfor %}
            </div>

            <!-- Infrastructure Hosts with Compose Stacks -->
            <div class="card">
                <h2>Infrastructure Hosts</h2>
{% for host in groups['all'] %}
                <div class="host-header">
                    <span class="host-name">{{ host }}</span>
                    <span class="host-ip">{{ hostvars[host].ansible_host }}</span>
{% for group in groups %}
{% if host in groups[group] and group != 'all' %}
                    <span class="badge">{{ group }}</span>
{% endif %}
{% endfor %}
                </div>
{% set host_ip = hostvars[host].ansible_host %}
{% set ns = namespace(has_stacks=false) %}
{% for stack in stacks %}
{% if stack.machine == host_ip %}
{% set ns.has_stacks = true %}
                <div class="stack-item">
                    <div class="stack-info">
                        <div class="stack-name">{{ stack.name }}</div>
                        <div class="stack-description">{{ stack.description }}</div>
                    </div>
{% if stack.endpoints %}
                    <div class="stack-icons">
{% for endpoint in stack.endpoints %}
{% if ':' in endpoint | string %}
{% set port, domain = endpoint.split(':') %}
{% set service_key = domain.split('.')[0] %}
{% set icon = favicon_map.get(service_key, 'default.png') %}
                        <a href="https://{{ domain }}" class="stack-icon-link" title="{{ domain }}" target="_blank">
                            <img src="favicons/{{ icon }}" alt="{{ service_key }}">
                        </a>
{% endif %}
{% endfor %}
                    </div>
{% endif %}
                </div>
{% endif %}
{% endfor %}
{% if not ns.has_stacks %}
                <div class="stack-item" style="border-left-color: #cbd5e0;">
                    <div class="stack-info">
                        <div class="stack-description">No compose stacks</div>
                    </div>
                </div>
{% endif %}
{% endfor %}
            </div>
        </div>
    </div>
</body>
</html>
